<!--result.wxml-->
<view class="container">
  <view class="score-display">{{score}}</view>
  <view class="score-label">本轮得分</view>
  
  <view class="stats">
    <view class="stat-item">
      <text class="stat-label">历史最高分</text>
      <text class="stat-value">{{highScore}}</text>
    </view>
    <view class="stat-item">
      <text class="stat-label">剩余时间</text>
      <text class="stat-value">{{timeLeft}}s</text>
    </view>
  </view>

  <view class="buttons">
    <button class="restart-btn" bindtap="restartGame">重新开始</button>
    <button class="home-btn" bindtap="goHome">返回首页</button>
    <button class="share-btn" bindtap="shareScore">分享成绩</button>
  </view>
</view>
