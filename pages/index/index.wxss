/**index.wxss**/
page {
  height: 100vh;
  background: linear-gradient(135deg, #FF6B6B, #FF8E8E);
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.title {
  font-size: 80rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 60rpx;
  text-align: center;
}

.high-score {
  font-size: 32rpx;
  color: white;
  margin-bottom: 80rpx;
  opacity: 0.9;
}

.start-btn {
  width: 400rpx;
  height: 100rpx;
  background: #FFD700;
  color: #333;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 50rpx;
  margin-bottom: 40rpx;
  border: none;
}

.rules-btn, .settings-btn {
  width: 300rpx;
  height: 80rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  font-size: 28rpx;
  border-radius: 40rpx;
  margin-bottom: 20rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}
