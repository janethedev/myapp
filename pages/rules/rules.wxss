/**rules.wxss**/
page {
  height: 100vh;
  background: white;
}

.container {
  height: 100vh;
}

.content {
  padding: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 60rpx;
}

.rule-section {
  margin-bottom: 50rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-bottom: 20rpx;
}

.rule-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 15rpx;
  padding-left: 20rpx;
}

.back-btn {
  width: 100%;
  height: 80rpx;
  background: #FF6B6B;
  color: white;
  font-size: 28rpx;
  border-radius: 40rpx;
  border: none;
  margin-top: 40rpx;
}
